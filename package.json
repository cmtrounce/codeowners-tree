{
  "name": "codeowners-visualizer",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "1.4.0",
  "icon": "resources/icon.png",
  "publisher": "cmtrounce",
  "license": "MIT",
  "keywords": [
    "codeowners",
    "owners",
    "ownership",
    "teams",
    "visualization",
    "graph"
  ],
  "engines": {
    "vscode": "^1.82.0"
  },
  "l10n": "./l10n",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/CODEOWNERS"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cmtrounce/codeowners-tree.git"
  },
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "codeownersTeams",
          "name": "%view.codeownersTeams.name%"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codeownersTeams",
        "contents": "%viewsWelcome.codeownersTeams.contents%"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codeownersTeams.openGraph",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "codeownersTeams.refreshEntries",
          "when": "view == codeownersTeams",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "codeownersTeams.downloadGraph",
          "when": "view == codeownersTeams && (viewItem == teamViewItem || viewItem == teamViewItemPinned || viewItem == teamViewItemGitHubTeam || viewItem == teamViewItemPinnedGitHubTeam || viewItem == teamViewItemGitHubUser || viewItem == teamViewItemPinnedGitHubUser)",
          "group": "inline"
        },
        {
          "command": "codeownersTeams.pinTeam",
          "when": "view == codeownersTeams && (viewItem == teamViewItem || viewItem == teamViewItemGitHubTeam || viewItem == teamViewItemGitHubUser)",
          "group": "inline"
        },
        {
          "command": "codeownersTeams.unpinTeam",
          "when": "view == codeownersTeams && (viewItem == teamViewItemPinned || viewItem == teamViewItemPinnedGitHubTeam || viewItem == teamViewItemPinnedGitHubUser)",
          "group": "inline"
        },
        {
          "command": "codeownersTeams.openGitHubTeam",
          "when": "view == codeownersTeams && (viewItem == teamViewItemGitHubTeam || viewItem == teamViewItemPinnedGitHubTeam || viewItem == teamViewItemGitHubUser || viewItem == teamViewItemPinnedGitHubUser)",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "codeownersTeams.openGraph",
        "category": "Custom",
        "title": "%command.openGraph.title%",
        "icon": "$(eye)"
      },
      {
        "command": "codeownersTeams.openGraphForFile",
        "category": "Custom",
        "title": "%command.openGraphForFile.title%",
        "icon": "$(file-code)"
      },
      {
        "command": "codeownersTeams.downloadGraph",
        "category": "Custom",
        "title": "%command.downloadGraph.title%",
        "icon": "$(cloud-download)"
      },
      {
        "command": "codeownersTeams.analyzeCoverage",
        "category": "Custom",
        "title": "%command.analyzeCoverage.title%",
        "icon": "$(graph)"
      },
      {
        "command": "codeownersTeams.exportCoverage",
        "category": "Custom",
        "title": "%command.exportCoverage.title%",
        "icon": "$(export)"
      },
      {
        "command": "codeownersTeams.refreshEntries",
        "category": "Custom",
        "title": "%command.refreshEntries.title%",
        "icon": "$(refresh)"
      },
      {
        "command": "codeownersTeams.pinTeam",
        "category": "Custom",
        "title": "%command.pinTeam.title%",
        "icon": "$(pin)"
      },
      {
        "command": "codeownersTeams.unpinTeam",
        "category": "Custom",
        "title": "%command.unpinTeam.title%",
        "icon": "$(unpin)"
      },
      {
        "command": "codeownersTeams.createCodeownersFile",
        "category": "Custom",
        "title": "%command.createCodeownersFile.title%",
        "icon": "$(add)"
      },
      {
        "command": "codeownersTeams.openCodeownersDocs",
        "category": "Custom",
        "title": "%command.openCodeownersDocs.title%",
        "icon": "$(book)"
      },
      {
        "command": "codeownersTeams.openGitHubTeam",
        "category": "Custom",
        "title": "%command.openGitHubTeam.title%",
        "icon": "$(github)"
      }
    ],
    "configuration": {
      "title": "CODEOWNERS Visualizer",
      "properties": {
        "codeownersTeams.pinnedTeams": {
          "type": "array",
          "default": [],
          "description": "%configuration.pinnedTeams.description%"
        },
        "codeownersTeams.showStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.showStatusBar.description%"
        },
        "codeownersTeams.showHoverInfo": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.showHoverInfo.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "build": "npm run compile && npm run lint",
    "watch": "tsc -w -p ./",
    "lint": "eslint src --ext ts",
    "test": "mocha test/**/*.test.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@types/which": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/graphviz": "^0.0.36",
    "@vscode/l10n": "^0.0.18",
    "graphviz": "^0.0.9",
    "which": "^4.0.0"
  }
}
