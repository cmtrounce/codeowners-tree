{
  "name": "codeowners-visualizer",
  "displayName": "CODEOWNERS Visualizer",
  "description": "Generate an interactive tree-like graph of code ownership for folders and files in your project.",
  "version": "1.3.5",
  "icon": "resources/icon.png",
  "publisher": "cmtrounce",
  "license": "MIT",
  "keywords": [
    "codeowners",
    "owners",
    "ownership",
    "teams",
    "visualization",
    "graph"
  ],
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/CODEOWNERS"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cmtrounce/codeowners-tree.git"
  },
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "codeownersTeams",
          "name": "Codeowners Teams"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codeownersTeams",
        "contents": "No CODEOWNERS file found in this workspace.\n\n[Create CODEOWNERS file](command:codeownersTeams.createCodeownersFile) | [Learn more](command:codeownersTeams.openCodeownersDocs)\n\nCODEOWNERS files help teams define ownership of code and documentation. They're typically placed in the root directory, `.github/`, or `docs/` folder."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codeownersTeams.openGraph",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "codeownersTeams.refreshEntries",
          "when": "view == codeownersTeams",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "codeownersTeams.downloadGraph",
          "when": "view == codeownersTeams && (viewItem == teamViewItem || viewItem == teamViewItemPinned || viewItem == teamViewItemGitHubTeam || viewItem == teamViewItemPinnedGitHubTeam || viewItem == teamViewItemGitHubUser || viewItem == teamViewItemPinnedGitHubUser)",
          "group": "inline"
        },
        {
          "command": "codeownersTeams.pinTeam",
          "when": "view == codeownersTeams && (viewItem == teamViewItem || viewItem == teamViewItemGitHubTeam || viewItem == teamViewItemGitHubUser)",
          "group": "inline"
        },
        {
          "command": "codeownersTeams.unpinTeam",
          "when": "view == codeownersTeams && (viewItem == teamViewItemPinned || viewItem == teamViewItemPinnedGitHubTeam || viewItem == teamViewItemPinnedGitHubUser)",
          "group": "inline"
        },
        {
          "command": "codeownersTeams.openGitHubTeam",
          "when": "view == codeownersTeams && (viewItem == teamViewItemGitHubTeam || viewItem == teamViewItemPinnedGitHubTeam || viewItem == teamViewItemGitHubUser || viewItem == teamViewItemPinnedGitHubUser)",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "codeownersTeams.openGraph",
        "category": "Custom",
        "title": "Open Codeowners Graph",
        "icon": "$(eye)"
      },
      {
        "command": "codeownersTeams.openGraphForFile",
        "category": "Custom",
        "title": "Open Codeowners Graph for Current File",
        "icon": "$(file-code)"
      },
      {
        "command": "codeownersTeams.downloadGraph",
        "category": "Custom",
        "title": "Download Codeowners Graph",
        "icon": "$(cloud-download)"
      },
      {
        "command": "codeownersTeams.pinTeam",
        "category": "Custom",
        "title": "Pin Codeowners Team",
        "icon": "$(pin)"
      },
      {
        "command": "codeownersTeams.unpinTeam",
        "category": "Custom",
        "title": "Unpin Codeowners Team",
        "icon": "$(pinned)"
      },
      {
        "command": "codeownersTeams.refreshEntries",
        "title": "Refresh Codeowners Teams",
        "icon": "$(refresh)"
      },
      {
        "command": "codeownersTeams.analyzeCoverage",
        "title": "Analyze CODEOWNERS Coverage",
        "icon": "$(graph)"
      },
      {
        "command": "codeownersTeams.exportCoverage",
        "title": "Export Coverage Report",
        "icon": "$(export)"
      },
      {
        "command": "codeownersTeams.createCodeownersFile",
        "title": "Create CODEOWNERS File",
        "icon": "$(add)"
      },
      {
        "command": "codeownersTeams.openCodeownersDocs",
        "title": "Open CODEOWNERS Documentation",
        "icon": "$(book)"
      },
      {
        "command": "codeownersTeams.openGitHubTeam",
        "title": "Open GitHub Team",
        "icon": "$(github)"
      }
    ],
    "configuration": {
      "title": "CODEOWNERS Visualizer",
      "properties": {
        "codeownersTeams.pinnedTeams": {
          "type": "array",
          "default": [],
          "description": "Pinned CODEOWNERS teams to show at the top."
        },
        "codeownersTeams.showStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Show the current file's codeowner in the status bar."
        },
        "codeownersTeams.showHoverInfo": {
          "type": "boolean",
          "default": false,
          "description": "Show codeowner information when hovering over files in the editor."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run lint",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "mocha test/**/*.test.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@types/which": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/graphviz": "^0.0.36",
    "graphviz": "^0.0.9",
    "which": "^4.0.0"
  }
}
